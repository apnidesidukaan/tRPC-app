    id              String   @id @default(auto()) @map("_id") @db.ObjectId
    fullName        String
    phoneNumber     String   @unique
    email           String   @unique
    roleId          String?  @db.ObjectId
    role            Role?    @relation(fields: [roleId], references: [id])
